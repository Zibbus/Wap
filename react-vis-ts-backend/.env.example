# Copy this file to .env and fill in the values
NODE_ENV=development
PORT=4000

# MySQL connection
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=yourpassword
DB_NAME=chatdb

# JWT secret (use a strong random string in production)
JWT_SECRET=dev-secret

#API Ollama
PROVIDER=ollama
OLLAMA_MODEL=qwen2.5:14b-instruct
OLLAMA_URL=http://localhost:11434

# Stile e decoding
BOT_SYSTEM_PROMPT=Sei MyFitBot, un assistente che risponde in ITALIANO naturale, chiaro e professionale. ...
BOT_TEMPERATURE=0.4
BOT_TOP_P=0.9
BOT_REPEAT_PENALTY=1.05
BOT_NUM_CTX=4096
BOT_MATCH_USER_LANG=true