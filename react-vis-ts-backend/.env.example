# Copy this file to .env and fill in the values
NODE_ENV=development
PORT=4000

# MySQL connection
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=yourpassword
DB_NAME=chatdb

# JWT secret (use a strong random string in production)
JWT_SECRET=dev-secret

# API Ollama
PROVIDER=ollama
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b-instruct # versione per 16 GB RAM
OLLAMA_MODEL_LIGHT=qwen2.5:1.5b-instruct  # versione leggera per 8 GB RAM

# Se =1 forza la versione leggera (utile sul PC da 8 GB)
LOW_MEMORY=0

# Stile e decoding
BOT_SYSTEM_PROMPT=Sei MyFitBot, un assistente che risponde in ITALIANO naturale, chiaro e professionale. Frasi brevi, tono amichevole e preciso. Evita anglismi inutili. Usa elenchi puntati quando rendono più chiaro.
BOT_TEMPERATURE=0.4
BOT_TOP_P=0.9
BOT_REPEAT_PENALTY=1.05
BOT_NUM_CTX=4096

# (opzionale) num_ctx più basso per il modello light
BOT_NUM_CTX_LIGHT=2048
BOT_MATCH_USER_LANG=true
